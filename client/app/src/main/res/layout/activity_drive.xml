<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/backRectTop"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:src="@drawable/grey_curved_rectangle_with_border"
        android:translationZ="1dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toTopOf="@+id/backRectMid"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/backRectMid"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/grey_curved_rectangle_with_border"
        android:translationZ="5dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toTopOf="@id/backRectBot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backRectTop"
        app:layout_constraintVertical_bias="0.475" />

    <ImageView
        android:id="@+id/backRectBot"
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:layout_margin="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/grey_curved_rectangle_with_border"
        android:translationZ="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/joystick"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="95dp"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:translationZ="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/backRectBot"
        app:layout_constraintEnd_toEndOf="@id/backRectBot"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/backRectBot"
        app:layout_constraintTop_toTopOf="@+id/backRectBot"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_button" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="0.3"
        android:contentDescription="cameraView"
        android:elevation="6dp"
        android:translationZ="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/backRectTop"
        app:layout_constraintTop_toTopOf="@+id/backRectTop" />

    <group01.smartcar.client.view.Speedometer
        android:id="@+id/fancySpeedometer"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/backRectMid"
        app:layout_constraintStart_toStartOf="@+id/backRectMid"
        app:layout_constraintTop_toTopOf="@+id/backRectMid"
        app:layout_constraintVertical_bias="1.0" />
    <TextView
        android:id="@+id/simpleSpeedometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="56dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="32dp"
        android:translationZ="6dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="@id/backRectMid"
        app:layout_constraintTop_toTopOf="@id/backRectMid"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/drive_park_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gearbox_vertical_background"
        android:elevation="6dp"
        android:rotation="90"
        android:scrollbarSize="4dp"
        android:switchMinWidth="120dp"
        android:track="@color/grey"
        android:translationZ="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/backRectMid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backRectMid"
        app:layout_constraintVertical_bias="0.716" />

    <ImageView
        android:id="@+id/micButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:backgroundTint="#F9F8FA"
        android:elevation="6dp"
        android:paddingRight="10dp"
        android:translationZ="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_mic_black_off" />


</androidx.constraintlayout.widget.ConstraintLayout>